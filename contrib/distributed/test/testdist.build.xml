<project name="testproject" basedir="..">
    <target name="testtargetFail">
        <mkdir dir="logs/testmodule-fail"/>
        <junit>
            <test name="bogustestclassFail" todir="logs/testmodule-fail"/>
            <formatter type="xml"/>
        </junit>
        <fail message="Intentional ant target failure"/>
    </target>

    <target name="testtargetSuccess">
        <mkdir dir="logs/testmodule-success"/>
        <junit>
            <test name="bogustestclassSuccess" todir="logs/testmodule-success"/>
            <formatter type="xml"/>
        </junit>

        <mkdir dir="output/testmodule-success"/>
        <touch file="output/testmodule-success/testoutputSuccess"/>
    </target>
</project>