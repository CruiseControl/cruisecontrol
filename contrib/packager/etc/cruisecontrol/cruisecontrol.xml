<cruisecontrol>
    <property name="cruise.working.dir" value="/var/spool/cruisecontrol"/>
    <project name="connectfour" buildafterfailed="false">

        <labelincrementer defaultLabel="${project.name}-1" separator="-"/>

        <listeners>
            <currentbuildstatuslistener file="${cruise.working.dir}/logs/${project.name}/status.txt"/>
        </listeners>

        <modificationset quietperiod="30">
            <svn LocalWorkingCopy="${cruise.working.dir}/checkout/${project.name}"/>
        </modificationset>

        <schedule interval="60">
            <ant antWorkingDir="${cruise.working.dir}/checkout/${project.name}"
                buildfile="build.xml"
                target="all"
                />
        </schedule>

        <log>
            <merge dir="${cruise.working.dir}/checkout/${project.name}/target/test-results"/>
        </log>

        <publishers>
            <artifactspublisher file="${cruise.working.dir}/checkout/${project.name}/target/${project.name}.jar" dest="${cruise.working.dir}/artifacts/${project.name}"/>
        </publishers>

    </project>
</cruisecontrol>
