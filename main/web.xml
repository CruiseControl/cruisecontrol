<!DOCTYPE web-app 
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN" 
    "http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">

<web-app>



    <servlet>
      <servlet-name>BuildServlet</servlet-name>
      <servlet-class>net.sourceforge.cruisecontrol.BuildServlet</servlet-class>

      <init-param>
        <!-- directory where log files are stored.  the servlet will look at these files to build the links on the left-side nav -->
        <param-name>logDir</param-name>
        <param-value></param-value>
      </init-param>
      <init-param>
        <!-- absolute path to cruisecontrol.xsl stylesheet for the servlet.  should be modified in the future to just check classpath, so we won't need this anymore -->
        <param-name>xslFile</param-name>
        <param-value></param-value>
      </init-param>
      <init-param>
        <!-- html title for the servlet -->
        <param-name>pageTitle</param-name>
        <param-value></param-value>
      </init-param>
      <init-param>
        <!-- configurable logo for the build servlet.  -->
        <param-name>logo</param-name>
        <param-value>continuousintegration.gif</param-value>
      </init-param>
      <init-param>
        <!-- cruisecontrol will write a snippet of html to be included in the servlet, signifying whether the build is running or when it will start again -->
        <param-name>currentBuildStatusFile</param-name>
        <param-value>currentbuild.txt</param-value>
      </init-param>
      <init-param>
        <!-- used for creating links on left-side nav -->
        <param-name>servletURL</param-name>
        <param-value>/buildservlet/BuildServlet</param-value>
      </init-param>
      <init-param>
        <!-- url for image directory -->
        <param-name>imageDir</param-name>
        <param-value>/buildservlet/images</param-value>
      </init-param>

      <!-- Load this servlet at server startup time -->
      <load-on-startup>5</load-on-startup>
    </servlet>
    
    
    <servlet-mapping>
      <servlet-name>BuildServlet</servlet-name>
      <url-pattern>/BuildServlet</url-pattern>
    </servlet-mapping>


</web-app>