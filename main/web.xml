<web-app>
    <servlet>
      <servlet-name>BuildServlet</servlet-name>
      <servlet-class>net.sourceforge.cruisecontrol.BuildServlet</servlet-class>

      <init-param>
        <!-- Absolute path to log directory.  The servlet will look at the log files in this 
         directory to build the navigation links -->
        <param-name>logDir</param-name>
        <param-value>d:/projects/cruisecontroltest/logs</param-value>
      </init-param>
      <init-param>
        <!-- Absolute path to XSL file used by servlet (i.e., cruisecontrol.xsl).-->
        <!--(PENDING) Just check classpath, so we won't need this anymore -->
        <param-name>xslFile</param-name>
        <param-value>d:/jakarta-tomcat-3.2.2/webapps/buildservlet/cruisecontrol.xsl</param-value>
      </init-param>
      <init-param>
        <!-- HTML title for the servlet -->
        <param-name>pageTitle</param-name>
        <param-value>Test title</param-value>
      </init-param>
      <init-param>
        <!-- Configurable logo for the build servlet.  Expected to be in imageDir -->
        <param-name>logo</param-name>
        <param-value>continuousintegration.gif</param-value>
      </init-param>
      <init-param>
        <!-- File used by CruiseControl to signify whether the build is running or when it will 
         start again.  Expected to be in logDir -->
        <param-name>currentBuildStatusFile</param-name>
        <param-value>currentbuild.txt</param-value>
      </init-param>
      <init-param>
        <param-name>servletURL</param-name>
        <param-value>/buildservlet/BuildServlet</param-value>
      </init-param>
      <init-param>
        <!-- URL to image directory -->
        <param-name>imageDir</param-name>
        <param-value>/buildservlet/images</param-value>
      </init-param>

    </servlet>
    
    
    <servlet-mapping>
      <servlet-name>BuildServlet</servlet-name>
      <url-pattern>/BuildServlet</url-pattern>
    </servlet-mapping>


</web-app>