<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>

    <import resource="propertyConfigurer.xml"/>

    <bean id="urlMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
        <property name="mappings">
            <props>
                <prop key="/**/forcebuild.ajax">forcebuildController</prop>
                <prop key="/**/addProjectFromVersionControl.ajax">addProjectFromVersionControlController</prop>
                <prop key="/**/getCommitMessage.ajax">getCommitMessageController</prop>
                <prop key="/**/getProjectBuildStatus.ajax">getProjectBuildStatusController</prop>
                <prop key="/**/getProjectBuildOutput.ajax">getProjectBuildOutputController</prop>
                <prop key="/**/cctray.xml">getProjectBuildStatusXmlController</prop>
                <prop key="/**/rss.xml">getProjectBuildStatusXmlController</prop>
            </props>
        </property>
    </bean>

    <bean id="forcebuildController"
          class="net.sourceforge.cruisecontrol.dashboard.web.ForceBuildController"
          autowire="byType">
        <constructor-arg ref="${cruise.jmx.service.imp}"/>
    </bean>

    <bean id="addProjectFromVersionControlController"
          class="net.sourceforge.cruisecontrol.dashboard.web.AddProjectFromVersionControlController">
        <constructor-arg ref="vcsFactory"/>
        <constructor-arg ref="configuration"/>
    </bean>

    <bean id="getProjectBuildStatusController" class="net.sourceforge.cruisecontrol.dashboard.web.GetProjectBuildStatusController">
        <constructor-arg ref="${cruise.jmx.service.imp}"/>
        <constructor-arg ref="buildSummariesService"/>
        <constructor-arg ref="buildSummaryUIService"/>
    </bean>

    <bean id="getProjectBuildOutputController" class="net.sourceforge.cruisecontrol.dashboard.web.GetProjectBuildOutputController">
        <constructor-arg ref="${cruise.jmx.service.imp}" />
    </bean>

    <bean id="getCommitMessageController" class="net.sourceforge.cruisecontrol.dashboard.web.GetCommitMessageController">
        <constructor-arg ref="${cruise.jmx.service.imp}" />
    </bean>

    <bean id="getProjectBuildStatusXmlController" class="net.sourceforge.cruisecontrol.dashboard.web.GetProjectBuildStatusXmlController">
        <constructor-arg ref="${cruise.jmx.service.imp}"/>
        <constructor-arg ref="buildSummariesService" />
        <constructor-arg ref="buildSummaryUIService" />
    </bean>
</beans>