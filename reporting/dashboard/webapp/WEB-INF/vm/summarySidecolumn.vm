#macro( messages $id $messageList $headerTag $headerId)
    #if ($messageList.size() > 0)
        <$headerTag id="$id-header">Messages ($messageList.size())</$headerTag>
        <p class="messages" id="$id">
            #foreach( $message in $messageList )
                <span class="$message.level">$message</span><br/>
            #end
        </p>
    #end
#end

<div class="sidecol">
    <p class="sidecol_header"><span>Last 25 builds</span> <a href="$req.getContextPath()/list/all/$projectName" title="All builds"><img src="$req.getContextPath()/images/icon-view-all-builds.gif" width="20" height="20" alt="View all builds" /></a><a href="$req.getContextPath()/list/passed/$projectName" title="All successful builds"><img src="$req.getContextPath()/images/icon-all-successful-builds.gif" width="20" height="20" alt="View all successful builds" /></a></p>
    <ul class="buildlist">
        #foreach( $buildSummary in $summaries )
            <li class="$buildSummary.getCssClassName()">
                <a href="$req.getContextPath()/detail/$projectName/$buildSummary.build.buildLogFilename">$buildSummary.getDateStringInHumanBeingReadingStyle() $!buildSummary.build.label</a>
            </li>
        #end
    </ul>
</div>
