<div id="modifications" class="modifications" $modification_extra_attrs>
    <h2>Modifications</h2>
    <ul>
        #if( $build.modifications.size() == 0)
            <p>No modifications found.</p>
        #end
        #foreach ($mod in $build.modifications)
            <li class="modification">
                <span class="user">$mod.user</span><br/><span class="comment">$mod.comment</span>
                <ul class="files">
                #foreach ($file in $mod.modifiedFiles)
                    <li>[$file.revision]&nbsp;<span class="$file.action">$file.action</span>&nbsp;$file.filename</li>
                #end
                </ul>
            </li>
        #end
    </ul>
</div>
